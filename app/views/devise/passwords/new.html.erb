<div class="courses_banner">
  <div class="container">
    <h3>Reset Password</h3>
    <p class="description">Enter your email address below and we'll send you a link to reset your password.</p>
      <div class="breadcrumb1">
          <ul>
              <li class="icon6"><a href="index.html">Home</a></li>
              <li class="current-page">Login</li>
          </ul>
      </div>
  </div>
</div>
  <!-- //banner -->
<div class="courses_box1">
   <div class="container">
     <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "login"}) do |f| %>
      <p class="lead">Reset Password</p>
      <%= devise_error_messages! -%>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete:"off", class:"required form-control",  placeholder: "Email(Username)" -%>
      </div>
      <div class="form-group">
          <%= f.submit "Reset Password", class: "btn btn-primary btn-lg1 btn-block" -%>
      </div>
      <%= render "devise/shared/links" %>
   <% end %>
   </div>
</div>
